{
    "name": "Bombo Chrome Extenstion",
    "version": "0.0.0.1",
    "description": "To help your productivity! (Keeping tabs on your break)",
    "permissions": ["storage", "tabs", "sessions", "history", "windows"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    "manifest_version": 2,
    "browser_action": { },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["pop-up-timer-on.js"]
    }],
    "page-action": {
        "default_icon": {
        "16": "icon_icon.png",
        "32": "icon_icon.png",
        "48": "icon_icon.png",
        "128": "icon_icon.png"
      }
    },
    "icons": {
        "16": "icon_icon.png",
        "32": "icon_icon.png",
        "48": "icon_icon.png",
        "128": "icon_icon.png"
      }
}

